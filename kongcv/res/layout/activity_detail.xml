<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_detail_items" >

            <ImageView
                android:id="@+id/iv_dah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:src="@drawable/community_light" />

            <TextView
                android:id="@+id/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="北京市聚龙花园"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_detail_items" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:src="@drawable/community_light"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/detail_txt_yu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="详细地址"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_detail_items" >

            <LinearLayout
                android:id="@+id/ll_iv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="15dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/iv_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/timer_start" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="开始"
                        android:textSize="@dimen/item_txtSizeTwo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/iv_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/timer_end" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="结束"
                        android:textSize="@dimen/item_txtSizeTwo" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_iv"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/txt_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:singleLine="true"
                    android:textColor="@color/txt_date"
                    android:textSize="@dimen/publish_txtSize" />

                <TextView
                    android:id="@+id/txt_end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/txt_date"
                    android:textSize="@dimen/publish_txtSize" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_time_pay_start"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_detail_items" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="@string/time_pay_start"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/time_pay_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text=" 年  月  日"
                android:textColor="@color/txt_date"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_time_pay_end"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_detail_items" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="@string/time_pay_end"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/time_pay_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text=" 年  月  日"
                android:textColor="@color/txt_date"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:background="@drawable/bg_detail_item" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="@string/tv_nodata"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/tv_not_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="一,三,五"
                android:textColor="@color/txt_date"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:background="@drawable/bg_detail_item" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="@string/tv_car_area"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/tv_car_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="㎡"
                android:textColor="@color/txt_date"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:background="@drawable/bg_detail_item" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="@string/tv_car_high"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/tv_car_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="m"
                android:textColor="@color/txt_date"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:background="@drawable/bg_detail_item" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="@string/tv_car_num"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/tv_car_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textColor="@color/txt_date"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_detail_items" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="@string/tv_car_right"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/tv_car_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="是"
                android:textColor="@color/txt_date"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:background="@drawable/bg_detail_item" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="@string/tv_car_address"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/tv_car_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="地下"
                android:textColor="@color/txt_date"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_detail_items" >

            <TextView
                android:id="@+id/tv_access_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="有无门禁卡："
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="105dp"
            android:background="@drawable/bg_detail_item" >

            <TextView
                android:id="@+id/tv_car_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="车位描述："
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_detail_items" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="@string/tv_car_type"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/detail_date"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/tv_price"
                android:textColor="@color/txt_detail"
                android:textSize="@dimen/publish_txtSize" />
        </LinearLayout>

        <ListView
            android:id="@+id/detail_listview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice" />

        <ListView
            android:id="@+id/detail_lv_phone"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/rl_reserveOrpay"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_high"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_detail_items" >

            <TextView
                android:id="@+id/tv_reserveOrpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"
                android:text="金额"
                android:textColor="#000000"
                android:textSize="@dimen/publish_txtSize" />

            <TextView
                android:id="@+id/tv_pay_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textColor="@color/txt_date"
                android:textSize="@dimen/publish_txtSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp" >

            <Button
                android:id="@+id/inform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_pay_detail"
                android:text="订单确认"
                android:textColor="#ffffff"
                android:textSize="@dimen/publish_txtSize" />

            <Button
                android:id="@+id/detail_pay_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_pay_detail"
                android:text="支    付"
                android:textColor="#ffffff"
                android:textSize="@dimen/publish_txtSize"
                android:visibility="gone" />

            <Button
                android:id="@+id/detail_button_refuse"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:background="@drawable/mine_tixain_selector"
                android:text="拒绝出租"
                android:textColor="@color/base_bg_color"
                android:textSize="@dimen/publish_txtSize"
                android:visibility="gone" />

            <Button
                android:id="@+id/detail_button_consent"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/detail_button_refuse"
                android:layout_alignBottom="@+id/detail_button_refuse"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50dp"
                android:background="@drawable/mine_tixain_selector"
                android:text="同意出租"
                android:textColor="@color/base_bg_color"
                android:textSize="@dimen/publish_txtSize"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>