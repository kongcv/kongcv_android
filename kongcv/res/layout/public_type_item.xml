<?xml version="1.0" encoding="utf-8"?>
<com.kongcv.view.SwipeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sl"
    android:layout_width="match_parent"
    android:layout_height="50dp" >
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_high"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="60dp"
            android:layout_height="@dimen/item_high"
            android:background="#666666"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/Delete"
            android:layout_width="60dp"
            android:layout_height="@dimen/item_high"
            android:background="#FF0000"
            android:gravity="center"
            android:text="删除"
            android:textColor="#FFFFFF" />
    </LinearLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_high"
    android:background="@drawable/bg_detail_item"
    android:orientation="horizontal"
     >

    <TextView
        android:paddingLeft="15dp"
        android:id="@+id/type_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/txt_date"
        android:textSize="@dimen/mkongcv_text_size" />
    <TextView
        android:id="@+id/type_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_date"
        android:textSize="@dimen/mkongcv_text_size" 
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/type_tv_price"
        android:paddingRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/txt_date"
        android:textSize="@dimen/mkongcv_text_size"
         />

</RelativeLayout>
</com.kongcv.view.SwipeLayout>