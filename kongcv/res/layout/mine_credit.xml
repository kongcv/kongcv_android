<?xml version="1.0" encoding="utf-8"?>
<!-- 银行卡页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_marginLeft"
            android:src="@drawable/btn_mine_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/mine_credit"
            android:textColor="@color/txt_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_jiahao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:src="@drawable/btn_jiahao"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="14dp"
        android:background="#dcdcdc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF" />

    <RelativeLayout
        android:id="@+id/rl_bankcard"
        android:layout_width="338dp"
        android:layout_height="110dp"
        android:layout_marginLeft="@dimen/item_txtmargin"
        android:layout_marginRight="@dimen/item_txtmargin"
        android:layout_marginTop="@dimen/item_txtmargin"
        android:background="@drawable/cash_bg"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/iv_bg_yuan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="@dimen/item_text_size"
            android:src="@drawable/bg_yuan" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_txtSizeTwo"
            android:layout_marginTop="@dimen/item_text_size"
            android:layout_toRightOf="@id/iv_bg_yuan"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国人民银行"
                android:textColor="@color/txt_pay"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_bank"
                    android:layout_marginTop="5dp"
                    android:text="**** **** ****"
                    android:textColor="@color/txt_pay" />

               

                <TextView
                    android:id="@+id/tv_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_bank"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/txt_pay"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>