<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/iv_back" />
        <!-- android:background="@drawable/bg_detail_items" -->

        <EditText
            android:id="@+id/txtfind"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_toLeftOf="@+id/iv_search"
            android:background="@drawable/search_bk"
            android:gravity="center_vertical"
            android:paddingLeft="43dp"
            android:singleLine="true"
            android:paddingBottom="3dp"
            android:textColor="#bbbbbb"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_et_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/txtfind"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back"
            android:padding="6dp"
            android:src="@drawable/iv_et_search" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignRight="@+id/txtfind"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:paddingBottom="3dp"
            android:src="@drawable/delete_item" 
            />

        <TextView
            android:id="@+id/iv_search"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/txtfind"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txtfind"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:background="@drawable/sousuo"
            android:text="搜索"
            android:textColor="#ffffff"
           />
    </RelativeLayout>

    <com.kongcv.view.AMapListView
        android:id="@+id/amaplist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="1dp" />

</LinearLayout>